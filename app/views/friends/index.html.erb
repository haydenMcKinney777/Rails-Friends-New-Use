<% if user_signed_in? %>

<div class="container">  
  <table class="table table-hover table-bordered">
    <thead class="table-dark">
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Instagram</th>
      </tr>
    </thead>
    <tbody>
      <% @friends.each do |friend| %>
      <% if friend.user == current_user %>
        <tr>

          <td>
            <%= link_to friend.first_name + ' ' + friend.last_name, friend %>
          </td>
              
          <td><%= friend.email %> </td>
          <td><%= friend.phone_number %></td>
          <td><%= friend.instagram %></td>
        </tr>
        <% end %>
      <% end %>
    </tbody>
</table>


<%= link_to "New friend", new_friend_path, class:"btn btn-secondary" %>
</div>
</div>

<% else %>

<div class="container">
<div class="card">
  <h2 class="card-header">Welcome to the Home page!</h2>
  <div class="card-body">
    <h5 class="card-title">Sign in to see your friends list!</h5>
    <%= link_to "Register for an account", new_user_registration_path, class:"btn btn-secondary" %>
    <%= link_to "Have an account? Login", new_user_session_path, class:"btn btn-secondary" %>
  </div>
  </div>
</div>


<% end %>
